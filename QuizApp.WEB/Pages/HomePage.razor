@page "/"
@inherits HomePageBase

<h3>HomePage</h3>

<EditForm Model="@employee" OnValidSubmit="HandleValidSubmit">
    <div class="form-group row">
        <label for="firstName" class="col-sm-2 col-form-label">
            First Name
        </label>
        <div class="col-sm-10">
            <InputText id="firstName" class="form-control" placeholder="First Name"
                       @bind-Value="employee.FirstName" />
            <ValidationMessage For="@(() => employee.FirstName)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="firstName" class="col-sm-2 col-form-label">
            First Name
        </label>
        <div class="col-sm-10">
            <InputText id="firstName" class="form-control" placeholder="Last Name"
                       @bind-Value="employee.LastName" />
            <ValidationMessage For="@(() => employee.LastName)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="department" class="col-sm-2 col-form-label">
            Department
        </label>
        <div class="col-sm-10">
            <CustominputSelect id="Department" @bind-Value="employee.DepartmentId" class="form-control">
                @foreach (var dep in Departments)
                {
                    <option value="@dep.DeptId">@dep.DepName</option>
                }
            </CustominputSelect>
        </div>
    </div>
    <div class="col-12">
    <span class="col-2"></span>
    <input type="submit" class="form-control col-1 btn btn-primary" value="Save" />
    </div>
</EditForm>
